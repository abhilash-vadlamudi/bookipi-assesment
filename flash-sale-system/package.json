{
  "name": "flash-sale-system",
  "version": "1.0.0",
  "description": "High-throughput flash sale system with inventory management - TypeScript Edition",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/server.js",
    "dev": "ts-node src/server.ts",
    "setup": "ts-node scripts/setup.ts",
    "setup:dev": "echo 'ðŸš€ Starting development server (database will auto-initialize)...' && npm run dev",
    "seed": "ts-node scripts/seed.ts",
    "db:reset": "rm -f data/flash_sale.db && npm run setup",
    "test": "jest",
    "test:unit": "jest --testPathPattern=src/tests/unit/",
    "test:integration": "jest --testPathPattern=src/tests/integration/",
    "test:stress": "jest --testPathPattern=src/tests/stress/ --runInBand --verbose --detectOpenHandles",
    "test:load": "jest --testPathPattern=src/tests/load/ --runInBand --verbose --detectOpenHandles",
    "test:performance": "jest --testPathPattern=src/tests/performance/ --runInBand --verbose --detectOpenHandles",
    "test:breaking-point": "jest --testPathPattern=src/tests/breaking-point/ --runInBand --verbose --detectOpenHandles",
    "test:all-stress": "jest --testPathPattern=src/tests/(stress|load|performance|breaking-point)/ --runInBand --verbose --detectOpenHandles",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": [
    "flash-sale",
    "inventory",
    "high-throughput",
    "typescript",
    "security"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.11.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^6.7.1",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "hpp": "^0.2.3",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.2",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.10.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/hpp": "^0.2.2",
    "@types/jest": "^29.5.3",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/node": "^20.5.0",
    "@types/sqlite3": "^3.1.8",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "eslint": "^8.47.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "rimraf": "^5.0.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
